<Page x:Class="Project1.Pages.SalesPeoplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalesPeoplePage">

    <Grid>
        <DataGrid x:Name="SalespeopleGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Path=FirstName}" Width="200"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Path=FamilyName}" Width="*"/>

            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Page>
